{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./**/*.ts", "app/booter.ts", "newApp/errors.ts", "app/server/server.ts", "app/tests.ts"
    ],
    "exclude": [
        "./dist",
        "./app/**/*"
    ]
}
